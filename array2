// Greatest Number amongst them and we can say that it is Bubble sort aswell //
import java.util.Scanner;
public class GreatestAmongstAllNumbers {
    public static void main(String[] args) {
        System.out.println("Enter the Size of Array");
        Scanner sc = new Scanner(System.in);
        int size= sc.nextInt();
        int []arr= new int[size];
        for(int i=0;i<arr.length;i++){
            System.out.println("Enter the "+(i+1)+" Elements");
            arr[i]=sc.nextInt();
        }
        for(int i=0;i<arr.length;i++){
            for(int j=0;j<arr.length-i-1;j++){
                if(arr[j]>arr[j+1]){
                    int temp=arr[j+1];
                    arr[j+1]=arr[j];
                    arr[j]=temp;
                }
            }
        }
        System.out.println("Greatest Number in array "+arr[size-1]);


    }
}
